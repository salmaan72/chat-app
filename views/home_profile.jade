html
  head
    title IO Chat
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
    script(src='/socket.io/socket.io.js')
    link(rel='stylesheet', href='http://localhost:3000/css/home_profile.css', type='text/css')
      
  body
    .container
      h4 welcome #{locals.name}
      form(action='http://localhost:3000/chat/logout', method='post', style='float:right')
        button.btn.btn-primary(type='submit') Logout
      .row
        .col-md-4
          .well
            h5 Online Users
            ul#users.list-group
        .col-md-8
          #chat.chat
          form#messageForm
            .form-group
              input#message.form-control(type="text", placeholder="enter a message", style="margin-top:10px")
              br
              input.btn.btn-primary(type='submit', value='Send Message')
    script.
      $(function(){
        var socket = io();
        var $messageForm = $('#messageForm');
        var $message = $('#message');
        var $chat = $('#chat');
        var $username = '#{locals.name}';
        var $users = $('#users');
        
        var onlineUsers = [];
        
        socket.emit('new user', $username);
        
        $messageForm.submit(function(e){
          e.preventDefault();
          //console.log('submitted');
          socket.emit('send message', $message.val());
          $message.val('');
        });
        socket.on('new message', function(data){
          $chat.append('<div class="well"><strong>'+data.user+': '+'</strong>'+data.msg+'</div>');
        });
        
        socket.on('get users', function(data){
          var html = '';
          for(let i=0;i<data.length;i++){
            if(data[i] !== $username){
              html += '<li class="list-group-item">'+data[i]+'</li>';
            }
          }
          $users.html(html);
        });
      });
